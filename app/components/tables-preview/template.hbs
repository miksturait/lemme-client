{{#if showAddTableForm}}
  <form {{action 'addTable' on='submit'}}>
    {{input type='number' value=seatsCount min='1'}}
    <button type='submit'>Add</button>
  </form>
{{else}}
  <button {{action 'showForm'}}>Add table</button>
{{/if}}

<div class="tables">
  {{#each filteredTables as |table|}}
    {{tables-preview/table
      table=table
      removeTable=(action 'removeTable')
    }}
  {{/each}}
</div>
